<h1>What's the longest word you can find?</h1>
<div class="container">
<% @letters.each do |letter|%>
<div class="card"><%= letter %></div>
<% end %>
</div>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="user_input" placeholder="LongWord" class="textey">
  <input type="submit" class="submission">
</form>

